<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      canvas {
        background-color: #b6e4f0c2;
      }
    </style>
      <title>외계인 피하기 게임</title>
    </p>
  </head>

  <body onload="startGame()">
    <script>
      var myGamePiece;
      var myObstacles = [];
      var myScore;
      var myGamePieceHitbox

      function startGame() {
        myGamePiece = new component(
          70,
          30,
          "red",
          20,
          100,
          "player",
          "gither.png"
        );
        myGamePieceHitbox = new component(50, 20, "black", 20, 90,);
        myScore = new component("30px", "Consolas", "black", 5, 40, "text");
        myGameArea.start();
      }

      var myGameArea = {
        canvas: document.createElement("canvas"),
        start: function () {
          this.canvas.width = 700;
          this.canvas.height = 400;
          this.context = this.canvas.getContext("2d");
          document.body.insertBefore(this.canvas, document.body.childNodes[0]);
          this.frameNo = 0;
          this.interval = setInterval(updateGameArea, 18.5);
          window.addEventListener("keydown", function (e) {
            myGameArea.keys = myGameArea.keys || [];
            myGameArea.keys[e.keyCode] = e.type == "keydown";
          });
          window.addEventListener("keyup", function (e) {
            myGameArea.keys[e.keyCode] = e.type == "keydown";
          });
        },
        clear: function () {
          this.context.clearRect(0, 0, this.canvas.width, this.canvas.height);
        },
        stop: function () {
          clearInterval(this.interval);
        },
      };
      function component(width, height, color, x, y, type, image) {
        this.type = type;
        this.width = width;
        this.height = height;
        this.speedX = 0;
        this.speedY = 0;
        this.x = x;
        this.y = y;
        this.update = function () {
          ctx = myGameArea.context;

          if (this.type == "text") {
            ctx.font = this.width + " " + this.height;
            ctx.fillStyle = color;
            ctx.fillText(this.text, this.x, this.y);
          } else {
            base_image = new Image();
            base_image.src = image;
            ctx.drawImage(base_image, this.x, this.y, this.width, this.height);
          }
        };
        this.newPos = function () {
          this.x += this.speedX;
          this.y += this.speedY;
          if (this.type == "player") {
            if (this.y < 0) this.y = 0;
            if (this.x < 0) this.x = 0;
            if (this.y > 380) this.y = 380;
          }
        };
        this.crashWith = function (otherobj) {
          var myleft = this.x;
          var myright = this.x + this.width;
          var mytop = this.y;
          var mybottom = this.y + this.height;
          var otherleft = otherobj.x;
          var otherright = otherobj.x + otherobj.width;
          var othertop = otherobj.y;
          var otherbottom = otherobj.y + otherobj.height;
          var crash = true;
          if (
            mybottom < othertop ||
            mytop > otherbottom ||
            myright < otherleft ||
            myleft > otherright
          ) {
            crash = false;
          }
          return crash;
        };
      }

      function updateGameArea() {
        var x, height, gap, minHeight, maxHeight, minGap, maxGap;
        for (i = 0; i < myObstacles.length; i += 1) {
          if (myGamePieceHitbox.crashWith(myObstacles[i])) {
            myGameArea.stop();
            alert("GAME OVER " + myScore.text);
            window.location.reload();
            return;
          }
        }
        myGameArea.clear();
        myGamePiece.speedX = 0;
        myGamePiece.speedY = 0;
        myGamePieceHitbox.x = myGamePiece.x;
        myGamePieceHitbox.y = myGamePiece.y;
        myGamePieceHitbox.newPos();
        if (myGameArea.keys && myGameArea.keys[37]) {
          myGamePiece.speedX = 3;
        }
        if (myGameArea.keys && myGameArea.keys[39]) {
          myGamePiece.speedX = -3;
        }
        if (myGameArea.keys && myGameArea.keys[38]) {
          myGamePiece.speedY = 3;
        }
        if (myGameArea.keys && myGameArea.keys[40]) {
          myGamePiece.speedY = -3;
        }
        myGameArea.frameNo += 1;
        if (myGameArea.frameNo < 1 || everyinterval(60)) {
          x = myGameArea.canvas.width;
          minHeight = 30;
          maxHeight = 100;
          height = Math.floor(
            Math.random() * (maxHeight - minHeight + 90) + minHeight
          );
          minGap = 55;
          maxGap = 100;
          gap = Math.floor(Math.random() * (maxGap - minGap + 1) + minGap);
          myObstacles.push(
            new component(50, height, "green", x, 0, "obstacle", "dhaiuh.png")
          );
          myObstacles.push(
            new component(
              50,
              x - height - gap,
              "green",
              x,
              height + gap,
              "obstacle",
              "brie.png"
            )
          )
        }
          var obstacleSpeed = 5; 
var acceleration = 0.08; 

for (i = 0; i < myObstacles.length; i += 1) {
    myObstacles[i].x += -obstacleSpeed;
    obstacleSpeed += acceleration; 
    myObstacles[i].newPos();
    myObstacles[i].update();
}
        myScore.text = "SCORE: " + myGameArea.frameNo;
        myScore.update();
        myGamePiece.newPos();
        myGamePiece.update();
      }

      function everyinterval(n) {
        if ((myGameArea.frameNo / n) % 1 == 0) {
          return true;
        }
        return false;
      }
    </script>
<div><h>컨트롤 방향키 </h></div>
    <div><h>1000점 소상품</h></div>
      <div><div><h>2500점 중상품</h></div></div>
    <div>3000점 대상품</div>
  </body>
</html>
